<script>
    $(document).ready(function () {

        $.ajax({
            dataType: "json",
            type: 'get',
            url: '/Cart/GetCountCart',
            success: function (data) {
                var tag_id = document.getElementById('iconcart');
                if (data.code == 200) {
                    tag_id.innerHTML = '<a href="/gio-hang/" class="count-cart" data-count="' + data.count + '"><span>' + new Intl.NumberFormat().format(data.total)+'đ</span></a>';
                }
                else if(data.code==500) {
                    tag_id.innerHTML = '<a href="/gio-hang/" class="count-cart" data-count="0"><span>0 VNĐ</span></a>';
                }

            }

        });

    });

</script>



