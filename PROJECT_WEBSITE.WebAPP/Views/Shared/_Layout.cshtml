                                <div class="dropdown-navs">
                                    <ul>

                                        <!-- Settings Start -->
                                        <li class="dropdown xs-after-n">

                                            @{
                                                var Name = ViewBag.User;
                                                var id = ViewBag.Id;
                                                if (Name != null)
                                                {
                                                    <a href="#">Xin chào!  @Name</a>
                                                    <ul class="dropdown-nav">
                                                        <li><a href="/tai-khoan/@id">Thông tin tài khoản</a></li>
                                                        <li><a href="@Url.Action("ClearSession", "Login")">Đăng xuất</a></li>
                                                    </ul>
                                                }
