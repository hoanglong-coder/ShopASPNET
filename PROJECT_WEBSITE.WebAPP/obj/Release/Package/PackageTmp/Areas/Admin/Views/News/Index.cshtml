<div class="row">
    <div class="col-12">
        <div class="card card-default card-primary">
            <div class="card-header">
                <h3 class="card-title">Quản lý tin tức</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="card card-primary card-tabs">
                    <div class="card-header p-0 pt-1">
                        <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="custom-tabs-one-tintuc-tab" data-toggle="pill" href="#custom-tabs-one-tintuc" role="tab" aria-controls="custom-tabs-one-tintuc" aria-selected="true">Danh sách tin tức</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="custom-tabs-one-loaitintuc-tab" data-toggle="pill" href="#custom-tabs-one-loaitintuc" role="tab" aria-controls="custom-tabs-one-loaitintuc" aria-selected="false">Danh sách loại tin tức</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="custom-tabs-one-tabContent">
                            <div class="tab-pane fade show active" id="custom-tabs-one-tintuc" role="tabpanel" aria-labelledby="custom-tabs-one-tintuc-tab">
                                .<!--header Table-->
                                <div class="row mb-3">
                                    <div class="col-6 col-md-3">
                                        <div class="input-group">
                                            <input type="search" id="search-news" class="form-control" placeholder="Nhập tiêu đề" />
                                        </div>
                                    </div>
                                    <div class="col-3 col-md-3">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Từ ngày</span>
                                            </div>
                                            <input type="date" class="form-control float-right" id="TuNgay">
                                        </div>
                                    </div>
                                    <div class="col-3 col-md-3">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Đến ngày</span>
                                            </div>
                                            <input type="date" class="form-control float-right" id="DenNgay">
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-1">
                                        <button type="button" id="btnTiemKiem" class="btn btn-primary"><i class="fas fa-search"></i>Tìm kiếm</button>
                                    </div>
                                    <div class="col-6 col-md-2">
                                        <button type="button" class="btn btn-primary" id="CreateNews"><i class="fas fa-plus"></i>Thêm tin tức</button>
                                    </div>
                                </div>
                                <!--Table-->
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="table table-bordered table-hover" id="tbl-data">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Mã tin tức</th>
                                                    <th>Ngày tạo</th>
                                                    <th>Tiêu đề</th>
                                                    <th>Người tạo</th>
                                                    <th>Loại tin tức</th>
                                                    <th>#</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbNews">
                                            </tbody>
                                        </table>
                                        <ul id="paginationnews" class="pagination"></ul>
                                        <script id="data-templateNews" type="x-tmpl-mustache">
                                            <tr>
                                                <td>{{STT}}</td>
                                                <td>{{NewsIDDisplay}}</td>
                                                <td>{{CreateDate}}</td>
                                                <td>{{Name}}</td>
                                                <td>{{UserName}}</td>
                                                <td>{{CategoryName}}</td>
                                                <th>
                                                    <a class="modalshowEdit" data-id="{{NewsID}}"  data-toggle="tooltip" data-placement="top" title="Sửa tin tức"><i class="far fa-edit"></i></a>
                                                    <a class="actiondelete" data-id="{{NewsID}}" data-name="{{Name}}" style="margin-left:5px"data-toggle="tooltip" data-placement="top" title="Xóa tin tức"><i class="far fa-trash-alt"></i></a>
                                                </th>
                                            </tr>
                                        </script>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="custom-tabs-one-loaitintuc" role="tabpanel" aria-labelledby="custom-tabs-one-loaitintuc-tab">
                                <!--header Table-->
                                <div class="row mb-3">
                                    <div class="col-6 col-md-3">
                                        <div class="input-group">
                                            <input type="search" id="search-newscategory" class="form-control" placeholder="Nhập tên loại" />
                                        </div>
                                    </div>
                                    <div class="col-3 col-md-3">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Từ ngày</span>
                                            </div>
                                            <input type="date" class="form-control float-right" id="TuNgayCategory">
                                        </div>
                                    </div>
                                    <div class="col-3 col-md-3">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Đến ngày</span>
                                            </div>
                                            <input type="date" class="form-control float-right" id="DenNgayCategory">
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-1">
                                        <button type="button" id="btnTiemKiemCategory" class="btn btn-primary"><i class="fas fa-search"></i>Tìm kiếm</button>
                                    </div>
                                    <div class="col-6 col-md-2">
                                        <button type="button" class="btn btn-primary" id="CreateNewsCategory"><i class="fas fa-plus"></i>Thêm loại tin tức</button>
                                    </div>
                                </div>
                                <!--Table-->
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="table table-bordered table-hover" id="tbl-data">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Mã loại tin tức</th>
                                                    <th>Ngày tạo</th>
                                                    <th>Tên loại</th>
                                                    <th>Giá trị hiển thị</th>
                                                    <th>Số bài viết</th>
                                                    <th>#</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <th colspan="5" style="text-align:center">Tổng bài viết</th>
                                                    <th style="text-align:right" id="counttotalnews"></th>
                                                </tr>
                                            </tbody>
                                            <tbody id="tbCategoryNews">
                                            </tbody>
                                        </table>
                                        <ul id="paginationCategoryNews" class="pagination"></ul>
                                        <script id="data-templateCategoryNews" type="x-tmpl-mustache">
                                            <tr>
                                                <td>{{STT}}</td>
                                                <td>{{CategoryNewIDDisplay}}</td>
                                                <td>{{CreateDate}}</td>
                                                <td>{{Name}}</td>
                                                <td style="text-align:right">{{Display}}</td>
                                                <td style="text-align:right">{{CountNews}}</td>
                                                <th>
                                                    <a class="modalshowEditCategory" data-id={{CategoryNewID}}><i class="far fa-edit"></i></a>
                                                    <a class="actiondeleteCategory" data-id="{{CategoryNewID}}" data-name="{{Name}}" style="margin-left:5px"><i class="far fa-trash-alt"></i></a>
                                                </th>
                                            </tr>
                                        </script>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>


<!-- Modal Thêm tin tức -->
<div class="modal fade" id="ModalCreateNews" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 1000px!important" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #01A65B;color:white">
                <h5>THÊM TIN TỨC</h5>
            </div>
            <div class="modal-body">
                <!-- form start -->
                <form class="form-horizontal" id="FromCreateNews" method="post">
                    <div class="card-body">
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Tiêu đề*</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="NewName" placeholder="Nhập tiêu đề tin tức" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Hình ảnh</label>
                            <div class="col-sm-6">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control rounded-0" id="imagenews">
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-info btn-info" id="imagechoosenews">Chọn ảnh đại diện!</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="row">
                                    <div class="col-12"><img id="ImageShownew" width="200" /><div><label style="margin-left:51px">ảnh đại diện</label></div></div>

                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Loại tin tức*</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="categorynews" style="width: 100%;">
                                    <option selected="selected">Chọn loại tin tức</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Nội dung</label>
                            <div class="col-sm-10">
                                <textarea type="text" class="form-control rounded-0" id="detailnew"></textarea>
                            </div>
                        </div>
                    </div>


                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button class="btn btn-default float-right" style="margin-right:10px" data-dismiss="modal">Thoát</button>
                        <button type="submit" class="btn btn-info float-right" style="margin-right:10px">Lưu</button>
                    </div>
                    <!-- /.card-footer -->
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Modal Chỉnh sửa tin tức -->
<div class="modal fade" id="ModalEditNews" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 1000px!important" role="document">
